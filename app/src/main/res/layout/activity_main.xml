<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFuture"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        android:text="Future"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPastPerfectSimple" />

    <Button
        android:id="@+id/btnPastPerfectSimple"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        android:text="Past Perfect Simple"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPresentPerfectContinuous" />

    <Button
        android:id="@+id/btnPresentPerfectContinuous"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        android:text="Present Perfect Continuous"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPresentPerfectSimple" />

    <Button
        android:id="@+id/btnPresentPerfectSimple"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        android:text="Present Perfect Simple"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPastSimple" />

    <Button
        android:id="@+id/btnPastSimple"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        android:text="Past Simple"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPastContinuous" />

    <Button
        android:id="@+id/btnPastContinuous"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        android:text="Past Continuous"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPresentSimple" />

    <Button
        android:id="@+id/btnPresentSimple"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        android:text="Present Simple"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPresentContinuous" />

    <Button
        android:id="@+id/btnPresentContinuous"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:text="Present Continuous"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>